@model VincentRestorant.Models.Information

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<form method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(m => m.Icon_img)
            <input type="file" name="Img" class="form-control" />
            @Html.HiddenFor(m => m.Icon_img)
            @Html.ValidationMessage("Img", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Titlecontent, htmlAttributes: new { @class = "control-label col-md-2" })
