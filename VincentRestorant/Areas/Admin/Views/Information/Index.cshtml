@model IEnumerable<VincentRestorant.Models.Information>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Icon_img)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titlecontent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Informationcontent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img width="400" src="~/assets/images/icons/@item.Icon_img" class="img-thumbnail" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titlecontent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Informationcontent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
