@model  IEnumerable<VincentRestorant.ViewModel.BasketProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal totalprice = 0;
    int idpro;


}
<!-- Discover   Our MEnu    start -->
<section id="discmenu">
    <div class="container menublock">
