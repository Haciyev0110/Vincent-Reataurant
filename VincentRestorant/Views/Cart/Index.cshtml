<!-- section    cart    start -->
<section id="cart">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="ptext">
                            <p>Your cart is currently empty.</p>

                        </div>
                    </div>
                    @if (Model != null)
                    {
                        <div class="container">
                            <table id="cart" class="table table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th style="width:50%;color:white">Product</th>
                                        <th style="width:10%;color:white">Price</th>
                                        <th style="width:8%;color:white">Quantity</th>
                                        <th style="width:22%;color:white" class="text-center">Subtotal</th>
                                        <th style="width:10%;color:white"></th>
                                    </tr>
                                </thead>



                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        item.Subtotal= item.Price * item.Count;

                                        totalprice += item.Subtotal;
                                        <tr>
                                            <td data-th="Product">
                                                <div class="row">

                                                    <div class="col-sm-6 hidden-xs" style="width:50%"><img style="width:100%;" src="~/assets/Products/@item.Image" alt="..." class="img-responsive" /></div>
                                                    <div class="col-sm-6">
                                                        <h4 class="nomargin">@item.Name</h4>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-th="Price">$@item.Price</td>
                                            <td data-th="Quantity">
                                                <input data-proPrice="@item.Price"  min="1"   type="number" data-proid="@item.ID" class="form-control text-center  outp" value="@item.Count">
                                            </td>
                                            <td data-th="Subtotal" data-subtotal="@item.Subtotal"  class="text-center  vmf">  $  @item.Subtotal</td>
                                            <td class="actions" data-th="">

                                                <button class="btn btn-danger btn-sm    deletproduc" data-proId="@item.ID"><i class="fa fa-trash-o"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                </tfoot>
                                <tr class="visible-xs">
                                  
                                    <td class="text-center">
                                        <strong class="proprice">Subtotal   $    @totalprice</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="hidden-xs"></td>
                                    <td><a href="@Url.Action("Index","Chekout")" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
                                </tr>



                            </table>

                        </div>
                    }

                    <div class="col-md-12">
