
@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>


<body>
    <div class="container" style="padding-left:11%">
        <div class="contact-form ">

            <!-- Submition status -->
            <div id="form-messages"></div>

            <div class="container">
                <form action="/AccountUser/Register" method="post">

                    <div class="row">

                        <div class="col-sm-10" style="text-align:center;">
                            <div class="form-group in_name ficon mt-30">
                                <span><i class="fas fa-signature" style="color:wheat"></i></span>
                                <input type="text" name="Firstname" class="form-control" id="firstname" placeholder="Firstname" required="required" style="background-color: #1d2326;color:white">
                            </div>
                            <div class="form-group in_name ficon mt-30">
                                <span><i class="fas fa-signature" style="color:wheat"></i></span>
                                <input type="text" name="Lastname" class="form-control" id="lastname" placeholder="Lastname" required="required" style="background-color: #1d2326;color:white">
                            </div>
                            <div class="form-group in_email ficon">
                                <span><i class="fa fa-envelope" style="color:wheat"></i></span>
                                <input type="email" name="email" class="form-control" id="email" placeholder="Email Address" required="required" style="background-color: #1d2326;color:white">
                            </div>
                            <div class="form-group in_subject ficon">
                                <span><i class="fas fa-user" style="color:wheat"></i></span>
                                <input type="text" name="Username" class="form-control" id="username" placeholder="Username" required="required" style="background-color: #1d2326;color:white">
                            </div>
                            <div class="form-group in_subject ficon">
                                <span><i class="fas fa-key" style="color:wheat"></i></span>
                                <input type="password" name="Password" class="form-control" id="password" placeholder="Password" required="required" style="background-color: #1d2326;color:white">
                            </div>
                            <div class="form-group in_name ficon mt-30">
                                <span><i class="fas fa-signature" style="color:wheat"></i></span>
                                <input type="text" name="Adress" class="form-control" id="adress" placeholder="Adress" required="required" style="background-color: #1d2326;color:white">
                            </div>

                            <div class="form-group in_subject ficon">
                                <span><i class="fa fa-phone" style="color:wheat"></i></span>
                                <input type="number" name="Phone" class="form-control" id="phone_number" placeholder="Your Phone Number" required="required" style="background-color: #1d2326;color:white">
                            </div>
                            <input type="submit" value="Register" />

                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
    
</body>

</html>
